<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
	<id>io.github.nokse22.teleprompter.desktop</id>
	<name>Teleprompter</name>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>
	<description>
	  <p>A simple app to read scrolling text from your screen. It has an adaptive layout to work on smartphones too.</p>
	</description>

  	<summary>Display scrolling text on your screen</summary>
	
 	<developer_name>Nokse</developer_name>
  
	<content_rating type="oars-1.0"></content_rating>
	
	  <recommends>
	    <control>keyboard</control>
	    <control>pointing</control>
	    <control>touch</control>
	    <control>tablet</control>
	  </recommends>

  <launchable type="desktop-id">io.github.nokse22.teleprompter.desktop</launchable>

  <url type="homepage">https://github.com/Nokse22/teleprompter</url>
  <url type="bugtracker">https://github.com/Nokse22/teleprompter/issues</url>

  <custom>
    <value key="GnomeSoftware::key-colors">[(76, 163, 217), (0, 0, 0)]</value>
  </custom>

  <releases>
    <release version="0.1.4" date="2023-07-22">
		  <description translatable="no">
			  <ul>
					<li>Settings are applied right away</li>
			    <li>Fixed some typos</li>
			    <li>Fixed highlighting issues</li>
				</ul>
		  </description>
	  </release>
    <release version="0.1.3" date="2023-07-09">
		  <description translatable="no">
			  <ul>
					<li>Fixed some bugs</li>
			    <li>Improved some icons</li>
			    <li>Added Spanish translation</li>
			    <li>Added Russian translation (Сергей Ворон)</li>
			    <li>When the end is reached it stops</li>
				</ul>
		  </description>
	  </release>
	  <release version="0.1.2" date="2023-06-16">
		  <description translatable="no">
			  <ul>
					<li>New icon</li>
					<li>Fixed highlighting bugs</li>
			    <li>Added Turkish translation (Sabri Ünal)</li>
			    <li>Added French translation (Irénée Thirion)</li>
			    <li>Added Italian translation</li>
			    <li>Fixed some translation issue</li>
			    <li>Fixed text becoming invisible</li>
			    <li>Fixed bug when opening unsupported files</li>
			    <li>Fixed the bold highlight setting not being saved</li>
				</ul>
		  </description>
	  </release>
    <release version="0.1.1" date="2023-06-11">
		  <description translatable="no">
			  <p>First release!</p>
		  </description>
	  </release>
  </releases>

  <categories>
    <category>Utility</category>
  </categories>

