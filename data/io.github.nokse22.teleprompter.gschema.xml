<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="teleprompter">
	<schema id="io.github.nokse22.teleprompter" path="/io/github/nokse22/teleprompter/">

	  <key name="font" type="s">
      <default>'Cantarell 40'</default>
    </key>

    <key name="text-color" type="s">
      <default>'#62A0EA'</default>
    </key>

	  <key name="speed" type="i">
      <default>100</default>
    </key>

	  <key name="highlight-color" type="s">
      <default>'#ED333B'</default>
    </key>

	  <key name="bold-highlight" type="b">
      <default>true</default>
    </key>

	  <key name="theme" type="s">
      <default>'dark'</default>
    </key>

	  <key name="vmirror" type="b">
      <default>false</default>
    </key>

	  <key name="hmirror" type="b">
      <default>false</default>
    </key>

	  <key name="osc-port" type="i">
      <default>7400</default>
      <summary>OSC server port</summary>
      <description>UDP port for OSC communication.</description>
    </key>
    
    <key name="osc-autostart" type="b">
      <default>false</default>
      <summary>Auto-start OSC server</summary>
      <description>Automatically start OSC server when application launches.</description>
    </key>

	</schema>
</schemalist>
