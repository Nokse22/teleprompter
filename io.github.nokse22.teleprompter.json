{
    "app-id" : "io.github.nokse22.teleprompter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "teleprompter",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--share=network"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	  "name": "blueprint-compiler",
	  "buildsystem": "meson",
	  "sources": [
	    {
	      "type": "git",
	      "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
	      "tag": "v0.16.0",
	      "commit": "04ef0944db56ab01307a29aaa7303df6067cb3c0"
	    }
	  ],
	  "cleanup": ["*"]
	},
        {
            "name" : "teleprompter",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
